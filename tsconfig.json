{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": false,
        "module": "es2020",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2022",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2022",
            "dom"
        ],
        "paths": {
          "angular-smart-popover": [
            "dist/angular-smart-popover"
          ],
            "ngx-smart-popover": [
                "dist/ngx-smart-popover"
            ],
            "ngx-smart-popover/*": [
                "dist/ngx-smart-popover/*"
            ]
        }
    },
    "angularCompilerOptions": {
        "compilationMode": "full",
    },
}